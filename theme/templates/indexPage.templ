								<li>/<span class="">next.js</span></li>
								<li>/<span class="">javascript</span></li>
								<li>/<span class="ocean">typescript</span></li>
								<li>/<span class="">node.js</span></li>
								<li>/<span class="ocean ">go</span></li>
								<li>/<span class="fire ">rails</span></li>
								<li>/<span class="">git</span></li>
								<li>/<span class="">linux</span></li>
							</ul>
						</div>
					</div>
					<div class="flex flex-col items-center">
